---
import { Icon } from "astro-icon";
---

<theme-toggle>
    <button
        class="flex items-center gap-3 rounded-full p-2 shadow-[inset_0_0_0_1px_rgb(30,58,138,.5)]">
        <span class="sr-only">Dark theme</span>

        <Icon
            class="z-20 h-3 w-3 text-black dark:z-0 dark:text-slate-400"
            name="ri:sun-line"
        />

        <span
            class="absolute z-10 h-7 w-7 -translate-x-2 rounded-full bg-indigo-200 transition duration-500 ease-in-out dark:translate-x-4 dark:bg-indigo-900">
        </span>

        <Icon
            class="z-0 h-3 w-3 text-slate-400 dark:z-20 dark:text-white"
            name="ri:moon-clear-line"
        />
    </button>
</theme-toggle>

<script>
    class ThemeToggle extends HTMLElement {
        constructor() {
            super();

            const button = this.querySelector("button")!;

            const setTheme = (dark: boolean) => {
                document.documentElement.classList[dark ? "add" : "remove"](
                    "dark"
                );
                button.setAttribute("aria-pressed", String(dark));
            };

            button.addEventListener("click", () => setTheme(!this.isDark()));

            setTheme(this.isDark());
        }

        isDark() {
            return document.documentElement.classList.contains("dark");
        }
    }

    customElements.define("theme-toggle", ThemeToggle);
</script>
