---
import OpenInNewTabIcon from "./OpenInNewTabIcon.astro";
import Pill from "./Pill.astro";

interface Props {
    name: string;
    projectUrl: string;
    description: string;
    skills: string[];
}

const { name, projectUrl, description, skills } = Astro.props;
---

<div class="flex flex-col gap-3">
    <header class="flex flex-col gap-2">
        <h2 class="flex text-sm font-bold">
            <a
                class="flex gap-1"
                href={projectUrl}
                target="_blank"
                aria-label=`Project ${name} link`>
                {name}
                <OpenInNewTabIcon />
            </a>
        </h2>

        <h6 class="text-xs text-slate-600 dark:text-slate-400">
            {description}
        </h6>
    </header>

    <ul class="flex flex-wrap gap-2">
        {
            skills.map((skill) => {
                return (
                    <li>
                        <Pill text={skill} />
                    </li>
                );
            })
        }
    </ul>
</div>
